<div class="container">
    <div class="row">
        <div class="jumbotron">
            <h1><center><strong>Eat-Da-Burger!</strong></center></h1>
        </div>  
    </div>
    <div class="row">
        <div class="col-md-6">       
            <h2><strong>Burgers that haven't been eaten yet</strong></h2>

            <ul>
            {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devour=true}}
                {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col-md-6">       
            <h2><strong>Burgers that you have eaten</strong></h2>

            <ul>
            {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devour=false}}
                {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>
    <br>
    <br>
    <div class="row">
        <div class="col-md-12">
            <h2><strong>Add a burger</strong></h2>
            <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
                <input type="radio" name="devoured" value="0" checked hidden>
            </div>

            <button class="btn btn-secondary" type="submit">Add burger</button>
            </form>
        </div>
    </div>
</div>